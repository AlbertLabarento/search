{
  "name": "loyaltycorp/search",
  "description": "Search functionality provided by elastic search",
  "keywords": [
    "elasticsearch",
    "loyaltycorp",
    "search"
  ],
  "license": "BSD-3-Clause",
  "type": "library",
  "require": {
    "php": ">=7.3",
    "elasticsearch/elasticsearch": "^6.1",
    "eoneopay/externals": "^1.0"
  },
  "require-dev": {
    "eoneopay/standards": "dev-master",
    "illuminate/container": "^5.8",
    "illuminate/support": "^5.8",
    "monolog/monolog": "^1.24",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan": "^0.11",
    "phpunit/phpunit": "^7.0",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.0",
    "squizlabs/php_codesniffer": "3.*",
    "vlucas/phpdotenv": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "LoyaltyCorp\\Search\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\LoyaltyCorp\\Search\\": "tests/"
    }
  },
  "suggest": {
    "monolog/monolog": "Required when using the Laravel bridge",
    "vlucas/phpdotenv": "Required when using the Laravel bridge"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
